<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andersonroman.domomcu.LoginActivity"
    android:background="#FF092F47">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/login"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DomoMCU"
            android:textColor="@color/whitesmoke"
            android:textSize="40sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Controle y gestione su hogar mas facilmente desde la comodidad de nuestra aplicación diseñada especialmente para ti"
            android:textSize="20sp"
            android:textColor="@color/whitesmoke"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Usuario"
            android:textColorHint="@color/whitesmoke"
            android:textColor="@color/whitesmoke"
            android:gravity="center"
            android:textSize="15sp"
            android:id="@+id/eUsuario"
            android:inputType="textEmailAddress"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="@color/whitesmoke"
            android:textColor="@color/whitesmoke"
            android:gravity="center"
            android:textSize="15sp"
            android:id="@+id/eContrasena"
            android:inputType="textPassword"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="Login"
            android:onClick="click"
            android:id="@+id/bLogin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                android:hint="F"
                android:textSize="25sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                android:hint="G"
                android:textSize="25sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:id="@+id/tRegistrese"
            android:textColor="@color/blue"
            android:gravity="center"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
